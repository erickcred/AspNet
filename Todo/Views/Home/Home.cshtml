
  <main class="container">
    @model IEnumerable<Todo.Models.TodoModel>
    @{
      ViewData["Title"] = "Home.cshtml";
    }

    <h1>@ViewData["Title"]</h1>


    <table class="table table-striped table-inverse table-responsive">
      <thead class="thead-inverse">
        <tr>
          <th>@Html.DisplayNameFor(mode => mode.Id)</th>
          <th>@Html.DisplayNameFor(model => model.Title)</th>
          <th>@Html.DisplayNameFor(model => model.Done)</th>
          <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          @foreach (var todo in Model)
          {
          <tr>
            <td>@todo.Id</td>
            <td>@todo.Title</td>
              @if (todo.Done)
              {
              <td>Finalizado</td>
              }
              else
              {
              <td>Em Andamento</td>
              }
              @if (todo.CreatedAt == DateTime.Parse("0001-01-01"))
              {
              <td>Sem data de cadatro</td>
              }
              else
              {
              <td>@todo.CreatedAt.ToString("dd/MM/yyyy - HH:mm:ss")</td>
              }
          </tr>
          }
        </tr>
      </tbody>
    </table>
  </main>

  
